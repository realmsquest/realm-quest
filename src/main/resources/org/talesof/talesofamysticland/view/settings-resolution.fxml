<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox 
    styleClass="config__content-box-margin"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="org.talesof.talesofamysticland.controller.SettingsController"
    stylesheets="@style.css"
>

    <VBox styleClass="config__content-box">

        <CheckBox styleClass="config__content-box__fullscreen-checkbox" text="Tela cheia" />

        <GridPane styleClass="config__content-box__grid">
            <HBox styleClass="config__content-box__resolution-box-margin" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <VBox styleClass="config__content-box__resolution-box" onMouseClicked="#onClickSelectResolutionLower">
                    <ImageView styleClass="config__computer-icon"/>
                    <Label styleClass="config__resolution-text" text="4:3"/>
                </VBox>
            </HBox>
            <HBox styleClass="config__content-box__resolution-box-margin" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <VBox styleClass="config__content-box__resolution-box" onMouseClicked="#onClickSelectResolutionStandart">
                    <ImageView styleClass="config__computer-icon"/>
                    <Label styleClass="config__resolution-text" text="16:9"/>
                </VBox>
            </HBox>
            <HBox styleClass="config__content-box__resolution-box-margin" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <VBox styleClass="config__content-box__resolution-box" onMouseClicked="#onClickSelectResolutionHighest">
                    <ImageView styleClass="config__computer-icon"/>
                    <Label styleClass="config__resolution-text" text="21:9"/>
                </VBox>
            </HBox>
        </GridPane>
    </VBox>

</HBox>
