        </ImageView> 
    </top>
 
    <center>
        <VBox styleClass="body-box">
            <HBox>
                <ImageView>
                    <fitWidth>50</fitWidth>
                    <preserveRatio>true</preserveRatio>
                    <image>
                        <Image url="@../media/wizard-icon.png"/>
                    </image>
                </ImageView> 

                <HBox>
                    <Label text="Nome" fx:id="lblCharacterName1" />
                    <Label text="0:51" fx:id="lblPlayTime1" />
                    <Label text="21/05/2023" fx:id="lblLastSaved1" />
                </HBox>

                <Button text="x" />
            </HBox>

            <HBox>
                <ImageView>
                    <fitWidth>50</fitWidth>
                    <preserveRatio>true</preserveRatio>
                </ImageView> 
                
                <HBox>
                    <Label text="Nome" fx:id="lblCharacterName2" />
                    <Label text="0:51" fx:id="lblPlayTime2" />
                    <Label text="21/05/2023" fx:id="lblLastSaved2" />
                </HBox>

                <Button text="x" />
            </HBox>

            <HBox>
                <ImageView>
                    <fitWidth>50</fitWidth>
                    <preserveRatio>true</preserveRatio>
                </ImageView> 

                <HBox>
                    <Label text="Nome" fx:id="lblCharacterName3" />
                    <Label text="0:51" fx:id="lblPlayTime3" />
                    <Label text="21/05/2023" fx:id="lblLastSaved3" />
                </HBox>

                <Button text="x" />
            </HBox>
        </VBox>
    </center>

    <bottom>
        <VBox styleClass="footer-box">
            <Button styleClass="footer-box__back-button" text="Voltar" onAction="#onActionBtnBack" />
        </VBox>
    </bottom>

</BorderPane> 