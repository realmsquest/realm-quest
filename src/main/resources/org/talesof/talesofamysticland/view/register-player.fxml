<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER_LEFT" spacing="25.0" xmlns:fx="http://javafx.com/fxml"
fx:controller="org.talesof.talesofamysticland.controller.RegisterPlayerController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <ImageView onMouseClicked="#onClickImgOpenConfigurations">
        <fitWidth>33</fitWidth>
        <preserveRatio>true</preserveRatio>
            <image>
                <Image url="@../media/config-icon.png"/>
            </image>
    </ImageView> 

    <VBox alignment="CENTER" spacing="15.0">
        <Label text="Junte-se a nossa Guilda!" />
    </VBox>

    <VBox spacing="20.0">

        <padding>
            <Insets bottom="20.0" left="320.0" right="320.0" top="20.0"/>
        </padding>

        <VBox spacing="5.0">
            <Label text="Nome de usuÃ¡rio" />
            <TextField fx:id="txfUsername" />
        </VBox>

        <VBox spacing="5.0">
            <Label text="E-mail" />
            <TextField fx:id="txfEmail" />
        </VBox>

        <VBox spacing="5.0">
            <Label text="Senha" />
            <PasswordField fx:id="pwfPassword" />
        </VBox>

        <VBox spacing="5.0">
            <Label text="Confirmar senha" />
            <PasswordField fx:id="pwfConfirmedPassword" />
        </VBox>
    </VBox>

    <VBox alignment="CENTER" spacing="10.0">
        <Button text="Criar conta" onAction="#onActionBtnRegisterPlayer"/>
        <Hyperlink text="JÃ¡ tenho uma conta." onAction="#onActionHplRedirectToLogin" />
    </VBox>

    <Button text="Voltar" onAction="#onActionBtnBack" />
</VBox>