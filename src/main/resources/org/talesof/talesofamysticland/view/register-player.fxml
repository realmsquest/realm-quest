<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import java.net.*?>

<BorderPane
    styleClass="root"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="org.talesof.talesofamysticland.controller.RegisterPlayerController"
    stylesheets="@style.css"
>

    <top>
        <ImageView styleClass="header-box__config-icon" onMouseClicked="#onClickImgOpenConfigurations">
            <image>
                <Image url="@../media/config-icon.png"/>
            </image>
        </ImageView> 
    </top>

    <center>
        <VBox styleClass="body-box">

            <Label text="Junte-se a nossa Guilda!" />

            <VBox styleClass="formInsertData"> 
                <VBox>
                    <Label text="Nome de usuário" />
                    <TextField fx:id="txfUsername" />
                </VBox>

                <VBox>
                    <Label text="E-mail" />
                    <TextField fx:id="txfEmail" />
                </VBox>

                <VBox>
                    <Label text="Senha" />
                    <PasswordField fx:id="pwfPassword" />
                </VBox>

                <VBox>
                    <Label text="Confirmar senha" />
                    <PasswordField fx:id="pwfConfirmedPassword" />
                </VBox>
            </VBox>

            <VBox>
                <Button styleClass="continueButton" text="Criar conta" onAction="#onActionBtnRegisterPlayer"/>
                <Hyperlink styleClass="hyperlink" text="Já tenho uma conta." onAction="#onActionHplRedirectToLogin" />
            </VBox>
        </VBox>
    </center>

    <bottom>
        <VBox styleClass="footer-box">
            <Button styleClass="footer-box__back-button" text="Voltar" onAction="#onActionBtnBack" />
        </VBox>
    </bottom>
</BorderPane>