<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane
    styleClass="root" 
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="org.talesof.talesofamysticland.controller.SettingsController"
    stylesheets="@style.css"
>

    <top>
        <Label styleClass="title-box__title-medium" text="Configurações" />
    </top>

    <left>
        <VBox styleClass="config__optionsbox">
            <Button styleClass="config__optionsbox__optionButton" text="Controles" onAction="#onActionOpenControlScreen"/>
            <Button styleClass="config__optionsbox__optionButton" text="Audio" onAction="#onActionOpenAudioScreen"/>
            <Button styleClass="config__optionsbox__optionButton" text="Resolucao" onAction="#onActionOpenResolutionScreen"/>
        </VBox>
    </left>

    <center>
    </center>

    <bottom>
        <HBox>
            <Button styleClass="footer-box__save-button" text="salvar" onAction="#onActionSaveSettings"/>
            <Button styleClass="footer-box__back-button" text="cancelar" onAction="#onActionCancelSettings"/>
        </HBox>
    </bottom>

</BorderPane> 