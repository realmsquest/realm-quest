<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane 
    styleClass="root"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="org.talesof.talesofamysticland.controller.TitleScreenController"
    stylesheets="@style.css"
>

    <top> 
        <VBox styleClass="header-box">
            <ImageView styleClass="header-box__config-icon" onMouseClicked="#onClickImgOpenConfigurations">
                <image>
                    <Image url="@../media/config-icon.png"/>
                </image>
            </ImageView> 
        </VBox>
    </top>

    <center>
        <VBox>
            <Label text="Tales of a Mystic Land" />

            <Button styleClass="continueButton" text="Jogar" onAction="#onActionBtnPlay" />

            <Button styleClass="backButton" text="Sair" onAction="#onActionBtnExit" />

            <Hyperlink styleClass="hyperlink" text="Criar conta." onAction="#onActionHplRedirectToRegisterPlayer" />
        </VBox>
    </center>

</BorderPane>