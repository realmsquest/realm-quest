<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="45.0" xmlns:fx="http://javafx.com/fxml"
fx:controller="org.talesof.talesofamysticland.controller.TitleScreenController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox alignment="CENTER_LEFT"> 
        <ImageView onMouseClicked="#onClickImgOpenConfigurations">
        <fitWidth>33</fitWidth>
        <preserveRatio>true</preserveRatio>
            <image>
                <Image url="@../media/config-icon.png"/>
            </image>
        </ImageView> 
    </VBox>

    <Label text="Tales of a Mystic Land" />

    <VBox alignment="CENTER" spacing="13.0">

        <Button styleClass="continueButton" text="Jogar" onAction="#onActionBtnPlay" />

        <Button styleClass="backButton" text="Sair" onAction="#onActionBtnExit" />

        <Hyperlink styleClass="hyperlink" text="Criar conta." onAction="#onActionHplRedirectToRegisterPlayer" />
    </VBox>
</VBox>