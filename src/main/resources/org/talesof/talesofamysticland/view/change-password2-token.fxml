<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane
    styleClass="root" 
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="org.talesof.talesofamysticland.controller.ChangePasswordController"
    stylesheets="@style.css"
>

    <top>
        <ImageView styleClass="header-box__config-icon" onMouseClicked="#onClickImgOpenConfigurations">
            <image>
                <Image url="@../media/config-icon.png"/>
            </image>
        </ImageView> 
    </top>

    <center>
        <VBox>
            <Label text="Use o código entregue pelo arauto do reino no e-mail" />
        </VBox>

        <VBox alignment="CENTER" spacing="15.0"> 

            <padding>
                <Insets bottom="20.0" left="320.0" right="320.0" top="20.0"/>
            </padding>

            <VBox spacing="5.0">
                <Label text="Código de verificação" />
                <TextField fx:id="txfVerificationToken" />
            </VBox>
        </VBox>

        <VBox alignment="CENTER" spacing="12.0">
            <Button styleClass="continueButton" text="Continuar" onAction="#onActionBtnValidateToken"/>
        </VBox>
    </center>

    <bottom>
        <HBox styleClass="footer-box">
            <Button styleClass="footer-box__back-button" text="Voltar" onAction="#onActionBtnBack" />
        </HBox>
    <bottom>

</BorderPane> 